<!DOCTYPE assembly [
        <!ELEMENT assembly (id|formats|includeBaseDirectory|fileSets|dependencySets|files)*>
        <!ELEMENT id (#PCDATA)>
        <!ELEMENT formats (format)*>
        <!ELEMENT format (#PCDATA)>
        <!ELEMENT includeBaseDirectory (#PCDATA)>
        <!ELEMENT fileSets (fileSet)*>
        <!ELEMENT fileSet (directory|outputDirectory|excludes|includes|fileMode|filtered)*>
        <!ELEMENT directory (#PCDATA)>
        <!ELEMENT outputDirectory (#PCDATA)>
        <!ELEMENT excludes (exclude)*>
        <!ELEMENT exclude (#PCDATA)>
        <!ELEMENT includes (include)*>
        <!ELEMENT include (#PCDATA)>
        <!ELEMENT fileMode (#PCDATA)>
        <!ELEMENT filtered (#PCDATA)>
        <!ELEMENT dependencySets (dependencySet)*>
        <!ELEMENT dependencySet (outputDirectory|includes)*>
        <!ELEMENT files (file)*>
        <!ELEMENT file (source|outputDirectory|fileMode|filtered|destName)*>
        <!ELEMENT source (#PCDATA)>
        <!ELEMENT destName (#PCDATA)>
        ]>
<assembly>
    <id>bin</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>${pom.artifactId}-${pom.version}</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>.</directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/ui</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/controller</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/collector</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/orchestrator</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>


        <!-- Setting up collector profile files -->
        <fileSet>
            <directory>.</directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/collector/tmp</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>.</directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/collector/bin/</outputDirectory>
            <excludes>
                <exclude>*/**</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>
                ../resources/datasources
            </directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/collector/datasources/</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ../resources/dbscripts
            </directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/collector/dbscripts/</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ../resources/conf
            </directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/collector/conf/</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ../resources/bin
            </directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/collector/bin/</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
            <fileMode>777</fileMode>
        </fileSet>
        <fileSet>
            <directory>
                ../modules/core/target/lib
            </directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/collector/lib/</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ./target/database
            </directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/collector/database/</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>
                ../modules/datasource-mgt/target/lib
            </directory>
            <outputDirectory>${pom.artifactId}-${pom.version}/collector/lib/</outputDirectory>
            <includes>
                <include>*/**</include>
            </includes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>../modules/core/target/seer-core-${pom.version}.jar</source>
            <outputDirectory>${pom.artifactId}-${pom.version}/collector/lib</outputDirectory>
            <fileMode>644</fileMode>
        </file>
        <file>
            <source>../modules/datasource-mgt/target/seer-datasource-mgt-${pom.version}.jar</source>
            <outputDirectory>${pom.artifactId}-${pom.version}/collector/lib</outputDirectory>
            <fileMode>644</fileMode>
        </file>
    </files>
</assembly>
